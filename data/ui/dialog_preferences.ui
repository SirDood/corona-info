<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="adw" version="1.0"/>
  <template class="PreferencesDialog" parent="AdwPreferencesWindow">
    <property name="default-height">700</property>
    <child>
      <object class="AdwPreferencesPage" id="preferences_page1">
        <child>
          <object class="AdwPreferencesGroup" id="columns_group">
            <property name="title">Toggle Columns</property>
            <property name="description">Toggle the visibility of individual table columns.</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
